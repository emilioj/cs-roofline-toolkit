# Linux workstation, MPI and OpenMP (4-core Intel i5 CPU 7200U, 2.50 GHz)

ERT_RESULTS Results.worlorn.01

ERT_DRIVER  driver1
ERT_KERNEL  kernel1

ERT_MPI         True
ERT_MPI_CFLAGS  -I/usr/include/openmpi
ERT_MPI_LDFLAGS -lmpi

ERT_OPENMP         True
ERT_OPENMP_CFLAGS  -fopenmp
ERT_OPENMP_LDFLAGS -fopenmp

ERT_FLOPS   1,2,4,8,16
ERT_ALIGN   32

ERT_CC      gcc
ERT_CFLAGS  -O3 -march=core-avx2 -msse3 -DERT_INTEL -include immintrin.h  -D__assume_aligned(_ptr,_align)=((void)((_ptr)=__builtin_assume_aligned((_ptr),(_align))))

ERT_LD      gcc
ERT_LDFLAGS
ERT_LDLIBS

ERT_RUN     export OMP_NUM_THREADS=ERT_OPENMP_THREADS; mpirun -np ERT_MPI_PROCS ERT_CODE

ERT_PROCS_THREADS  1-4
ERT_MPI_PROCS      1,2,4
ERT_OPENMP_THREADS 1,2,4

ERT_NUM_EXPERIMENTS 3

ERT_MEMORY_MAX 1073741824

ERT_WORKING_SET_MIN 1

ERT_TRIALS_MIN 1

ERT_GNUPLOT gnuplot
